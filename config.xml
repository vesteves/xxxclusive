<?xml version="1.0" encoding="utf-8" ?>
<cu3er>
	<settings>
		 <auto_play>
           <defaults symbol="circular"/>
           <tweenIn x="895" y="45" width="30" height="30" tint="0x20282e" alpha="0.5"/>
           <tweenOver alpha="1"/>
        </auto_play>

    	<prev_button>
			<defaults round_corners="5,5,5,5"/>
			<tweenOver tint="0xFFFFFF" scaleX="1.1" scaleY="1.1"/>
			<tweenOut tint="0x000000" />
		</prev_button>
		
    	<prev_symbol>
			<tweenOver tint="0x000000" />			
		</prev_symbol>
		
    	<next_button>
			<defaults round_corners="5,5,5,5"/>			
			<tweenOver tint="0xFFFFFF"  scaleX="1.1" scaleY="1.1"/>
			<tweenOut tint="0x000000" />
		</next_button>
		
    	<next_symbol>
			<tweenOver tint="0x000000" />
		</next_symbol>	
			
	</settings>    

	<slides>
	
        <slide>
            <url>images/2013-11-05 09.13.05 (Custom).jpg</url>
        </slide>
		<!-- changing transition between first & second slide -->
        <transition num="3" slicing="vertical" direction="down"/>
        <slide>
       		<url>images/branquinha (Custom).jpg</url>
        </slide>		
		<!-- changing transition between second & third slide -->
        <transition num="4" direction="right" shader="flat" />
		<slide>
            <url>images/2013-11-03 13.24.25 (Custom).jpg</url>
        </slide>
        <!-- transitions properties defined in transitions template -->
		<slide>
       		<url>images/2013-11-02 01.07.48 (Custom).jpg</url>
        </slide>
		<transition num="6" slicing="vertical" direction="up" shader="flat" delay="0.05" z_multiplier="4" />
        <slide>
       		<url>images/2013-10-13 02.51.21 (Custom).jpg</url>
        </slide>
				
	</slides>
</cu3er>

